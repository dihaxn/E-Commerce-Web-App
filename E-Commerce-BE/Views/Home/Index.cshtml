        }

    .cta-title {
        font-weight: 800;
        letter-spacing: -0.5px;
        margin-bottom: 1rem;
        position: relative;
        z-index: 1;
    }

    .cta-text {
        max-width: 600px;
        margin-bottom: 1.5rem;
        position: relative;
        z-index: 1;
        opacity: 0.9;
    }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .hero-title

    {
        font-size: 2.2rem;
        max-width: 100%;
    }

    .hero-img {
        max-width: 90%;
