@model LoginDto
@{
    ViewData["Title"] = "Login";
}

<style>
    :root {
        /* Premium Color Palette */
        --primary-color: #6c5ce7;
        --primary-dark: #5649c0;
        --accent-color: #00cec9;
        --light-bg: #f8f9ff;
        --card-bg: #ffffff;
        --text-dark: #2d3436;
        --text-light: #f5f6fa;
        --shadow-light: 0 4px 20px rgba(108, 92, 231, 0.1);
        --shadow-medium: 0 8px 30px rgba(108, 92, 231, 0.2);
        --shadow-heavy: 0 15px 40px rgba(0, 0, 0, 0.15);
        --border-radius: 16px;
        --border-radius-sm: 8px;
        --primary-gradient: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
    }

    body {
        background-color: var(--light-bg);
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        margin: 0;
        padding: 1rem;
    }

    .login-container {
        max-width: 700px;
        margin: 2rem auto;
    }

    .login-card {
        border: none;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-heavy);
        background: var(--card-bg);
        overflow: hidden;
    }

    .login-header {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        color: white;
        padding: 1.5rem;
        text-align: center;
    }

    .login-title {
        font-weight: 800;
        letter-spacing: -0.5px;
        margin: 0;
        font-size: 1.75rem;
    }

    .login-body {
        padding: 2rem;
    }

    .form-label {
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control {
        border-radius: var(--border-radius-sm);
        padding: 0.75rem 1rem;
        border: 1px solid rgba(108, 92, 231, 0.2);
        transition: all 0.3s ease;
        width: 100%;
        box-sizing: border-box;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: var(--accent-color);
            box-shadow: 0 0 0 0.25rem rgba(0, 206, 201, 0.15);
            outline: none;
        }

    .form-check {
        display: flex;
        align-items: center;
        margin: 1rem 0;
    }

    .form-check-input {
        border-radius: var(--border-radius-sm);
        border: 1px solid rgba(108, 92, 231, 0.2);
        width: 1.2em;
        height: 1.2em;
        margin-right: 0.5rem;
    }

        .form-check-input:checked {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

    .form-check-label {
        color: var(--text-dark);
        cursor: pointer;
    }

    .text-danger {
        font-size: 0.85rem;
        margin-top: 0.25rem;
        color: #dc3545;
        display: block;
    }

    .btn-login {
        background: var(--primary-gradient);
        border: none;
        color: white;
        padding: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-medium);
        }

    .btn-cancel {
        border: 2px solid var(--primary-color);
        color: var(--primary-color);
        background: transparent;
        padding: 0.75rem;
        font-weight: 600;
        transition: all 0.3s ease;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-cancel:hover {
            background: var(--primary-color);
            color: white;
        }

    .divider {
        display: flex;
        align-items: center;
        margin: 1.5rem 0;
    }

        .divider::before, .divider::after {
            content: "";
            flex: 1;
            border-bottom: 1px solid rgba(108, 92, 231, 0.2);
        }

    .divider-text {
        padding: 0 1rem;
        color: #6c757d;
        font-size: 0.9rem;
    }

    .d-grid {
        display: grid;
        gap: 1rem;
    }

    .mt-5 {
        margin-top: 3rem;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .login-container {
            padding: 0 1rem;
        }

        .login-body {
            padding: 1.5rem;
        }

        .form-row {
            flex-direction: column;
        }
    }
</style>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1 class="login-title">
                <i class="bi bi-box-arrow-in-right me-2"></i>Welcome Back
            </h1>
        </div>

        <div class="login-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-4">
                    <label asp-for="Email" class="form-label">Email Address*</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="form-label">Password*</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="RememberMe">
                    <label class="form-check-label" asp-for="RememberMe">Remember me</label>
                </div>

                <div class="d-grid gap-3 mt-5">
                    <button type="submit" class="btn btn-login">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Log In
                    </button>

                    <div class="divider">
                        <span class="divider-text">or</span>
                    </div>

                    <a asp-controller="Account" asp-action="Register" class="btn btn-cancel">
                        <i class="bi bi-person-plus-fill me-2"></i>Create an Account
                    </a>
                </div>

                <div class="text-center mt-3">
                    <a asp-controller="Account" asp-action="ForgotPassword" class="text-muted" style="text-decoration: none; font-size: 0.9rem;">
                        <i class="bi bi-key me-1"></i>Forgot your password?
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Floating label effect
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function () {
                this.parentElement.querySelector('.form-label').style.color = 'var(--primary-color)';
            });

            input.addEventListener('blur', function () {
                if (!this.value) {
                    this.parentElement.querySelector('.form-label').style.color = '';
                }
            });
        });
    </script>
}