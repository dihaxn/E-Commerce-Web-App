@model Product

<style>
    :root {
        /* Premium Color Palette */
        --primary-color: #6c5ce7;
        --primary-dark: #5649c0;
        --accent-color: #00cec9;
        --light-bg: #f8f9ff;
        --card-bg: #ffffff;
        --text-dark: #2d3436;
        --text-light: #f5f6fa;
        --shadow-light: 0 4px 20px rgba(108, 92, 231, 0.1);
        --shadow-medium: 0 8px 30px rgba(108, 92, 231, 0.2);
        --shadow-heavy: 0 15px 40px rgba(0, 0, 0, 0.15);
        --border-radius: 16px;
        --border-radius-sm: 8px;
    }

    body {
        background-color: var(--light-bg);
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        padding-top: 2rem;
    }

    .product-detail-container {
        background: var(--card-bg);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-heavy);
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .product-image-container {
        text-align: center;
        position: relative;
        overflow: hidden;
        border-radius: var(--border-radius);
        background: linear-gradient(to bottom, #f8f9fa, #e9ecef);
        padding: 2rem;
    }

    .product-image {
        max-width: 100%;
        height: auto;
        max-height: 400px;
        object-fit: contain;
        transition: all 0.5s ease;
        border-radius: var(--border-radius-sm);
    }

        .product-image:hover {
            transform: scale(1.05);
        }

    .product-title {
        font-weight: 800;
        color: var(--primary-color);
        margin-bottom: 1.5rem;
        letter-spacing: -0.5px;
    }

    .product-price {
        font-weight: 700;
        font-size: 2rem;
        color: var(--primary-dark);
        margin-bottom: 1.5rem;
    }

    .btn-add-to-cart {
        background: var(--primary-gradient);
        border: none;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        color: white;
        border-radius: var(--border-radius);
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .btn-add-to-cart:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-medium);
            background: var(--primary-dark);
        }

    .product-divider {
        border: none;
        height: 1px;
        background: linear-gradient(to right, transparent, rgba(108, 92, 231, 0.3), transparent);
        margin: 2rem 0;
    }

    .product-spec-label {
        font-weight: 600;
        color: var(--primary-dark);
    }

    .product-spec-value {
        color: var(--text-dark);
    }

    .product-description {
        background: rgba(248, 249, 252, 0.5);
        padding: 1.5rem;
        border-radius: var(--border-radius-sm);
        line-height: 1.7;
        border-left: 4px solid var(--accent-color);
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .product-detail-container {
            padding: 1.5rem;
        }

        .product-image-container {
            margin-bottom: 1.5rem;
            padding: 1rem;
        }

        .product-title {
            font-size: 1.75rem;
        }

        .product-price {
            font-size: 1.5rem;
        }
    }
</style>

<div class="container">
    <div class="product-detail-container">
        <div class="row">
            <div class="col-lg-5">
                <div class="product-image-container">
                    <img src="/products/@Model.ImageFileName" class="product-image" alt="@Model.Name" />
                </div>
            </div>
            <div class="col-lg-7">
                <h1 class="product-title">@Model.Name</h1>
                <div class="product-price">@Model.Price.ToString("C")</div>

                <button type="button" class="btn-add-to-cart">
                    <i class="bi bi-cart-plus-fill"></i> Add to Cart
                </button>

                <hr class="product-divider" />

                <div class="row mb-3">
                    <div class="col-sm-3 product-spec-label">
                        Brand
                    </div>
                    <div class="col-sm-9 product-spec-value">
                        @Model.Brand
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3 product-spec-label">
                        Category
                    </div>
                    <div class="col-sm-9 product-spec-value">
                        <span class="badge bg-primary rounded-pill">@Model.Category</span>
                    </div>
                </div>

                <div class="product-spec-label mb-2">Description</div>
                <div class="product-description" style="white-space: pre-line">@Model.Description</div>
            </div>
        </div>
    </div>
</div>

<script>
    // Add to cart animation
    document.querySelector('.btn-add-to-cart').addEventListener('click', function() {
        const btn = this;
        btn.innerHTML = '<i class="bi bi-check-circle-fill"></i> Added to Cart';
        btn.style.background = 'var(--success-gradient)';

        setTimeout(() => {
            btn.innerHTML = '<i class="bi bi-cart-plus-fill"></i> Add to Cart';
            btn.style.background = 'var(--primary-gradient)';
        }, 2000);
    });

    // Image zoom functionality
    document.querySelector('.product-image').addEventListener('click', function() {
        const modal = document.createElement('div');
        modal.style.position = 'fixed';
        modal.style.top = '0';
        modal.style.left = '0';
        modal.style.width = '100%';
        modal.style.height = '100%';
        modal.style.backgroundColor = 'rgba(0,0,0,0.9)';
        modal.style.display = 'flex';
        modal.style.alignItems = 'center';
        modal.style.justifyContent = 'center';
        modal.style.zIndex = '9999';
        modal.style.cursor = 'zoom-out';

        const img = document.createElement('img');
        img.src = this.src;
        img.style.maxWidth = '90%';
        img.style.maxHeight = '90%';
        img.style.objectFit = 'contain';
        img.style.borderRadius = 'var(--border-radius)';

        modal.appendChild(img);
        modal.addEventListener('click', function() {
            document.body.removeChild(modal);
        });

        document.body.appendChild(modal);
    });
</script>