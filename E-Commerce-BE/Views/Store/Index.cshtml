@model StoreSearchModel
@{
}

<style>
    :root {
        /* Premium Gradient Palette */
        --primary-color: #7b4cdf;
        --primary-gradient: linear-gradient(135deg, #7b4cdf, #5a2fbe);
        --hover-color: #6a3fc7;
        --accent-color: #00e3d0;
        --success-color: #2ecc71;
        --warning-color: #f39c12;
        --danger-color: #e74c3c;
        --text-color: #2c3e50;
        --light-bg: #f8f9ff;
        --card-bg: #ffffff;
        --shadow-light: 0 4px 20px rgba(123, 76, 223, 0.1);
        --shadow-medium: 0 8px 30px rgba(123, 76, 223, 0.2);
        --shadow-heavy: 0 15px 40px rgba(0, 0, 0, 0.15);
        --border-radius: 12px;
        --border-radius-sm: 6px;
    }

    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        background-color: var(--light-bg);
        color: var(--text-color);
        padding-top: 20px;
    }

    h2 {
        font-weight: 800;
        letter-spacing: -0.5px;
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        margin-bottom: 2rem !important;
    }

    /* Filter Controls */
    .form-select, .form-control {
        border-radius: var(--border-radius-sm);
        padding: 0.75rem 1rem;
        border: 1px solid rgba(123, 76, 223, 0.2);
        transition: all 0.3s ease;
    }

        .form-select:focus, .form-control:focus {
            border-color: var(--accent-color);
            box-shadow: 0 0 0 0.25rem rgba(0, 227, 208, 0.15);
        }

    .btn-outline-success {
        border-color: var(--success-color);
        color: var(--success-color);
        transition: all 0.3s ease;
    }

        .btn-outline-success:hover {
            background: var(--success-color);
            color: white;
        }

    /* Product Cards */
    .rounded.border.shadow {
        border-radius: var(--border-radius) !important;
        border: none !important;
        box-shadow: var(--shadow-light) !important;
        transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        background: white;
        position: relative;
        z-index: 1;
        height: 100%;
    }

        .rounded.border.shadow:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(123, 76, 223, 0.25) !important;
        }

        .rounded.border.shadow::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 5%;
            width: 90%;
            height: 20px;
            background: #7b4cdf;
            filter: blur(12px);
            opacity: 0;
            transition: all 0.4s ease;
            z-index: -1;
        }

        .rounded.border.shadow:hover::after {
            opacity: 0.3;
        }

        .rounded.border.shadow img {
            transition: transform 0.5s ease;
        }

        .rounded.border.shadow:hover img {
            transform: scale(1.05);
        }

        .rounded.border.shadow hr {
            opacity: 0.2;
            margin: 1rem 0;
        }

        .rounded.border.shadow h5 {
            font-weight: 700;
            color: var(--primary-color);
        }

        .rounded.border.shadow p {
            color: #666;
            font-size: 0.9rem;
        }

    /* Buttons */
    .btn-primary {
        background: var(--primary-gradient);
        border: none;
        padding: 0.5rem 1.25rem;
        font-weight: 600;
    }

    .btn-warning {
        background: var(--warning-color);
        color: white;
        border: none;
        padding: 0.5rem 1.25rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-warning:hover {
            background: #e69500;
            transform: translateY(-2px);
        }

    .btn-sm {
        font-size: 0.85rem;
    }

    /* Pagination */
    .pagination {
        justify-content: center;
        margin-top: 3rem;
    }

    .page-item.active .page-link {
        background: var(--primary-gradient);
        border-color: var(--primary-color);
    }

    .page-link {
        color: var(--primary-color);
        border: 1px solid rgba(123, 76, 223, 0.3);
        margin: 0 0.25rem;
        transition: all 0.3s ease;
    }

        .page-link:hover {
            color: white;
            background: var(--primary-color);
            border-color: var(--primary-color);
            transform: translateY(-2px);
        }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .rounded.border.shadow {
            margin-bottom: 1.5rem;
        }

        .form-select, .form-control {
            margin-bottom: 0.75rem;
        }

        .btn-outline-success {
            width: 100%;
            margin-top: 0.5rem;
        }
    }
</style>

<h2 class="pb-4 text-center">Products</h2>

<form class="row g-3 mb-3">
    <div class="col-lg-2 col-md-4">
        <select class="form-select" name="brand" asp-for="Brand" onchange="this.form.submit()">
            <option value="">All Brands</option>
            <option value="Samsung">Samsung</option>
            <option value="Apple">Apple</option>
            <option value="Nokia">Nokia</option>
            <option value="HP">HP</option>
        </select>
    </div>
    <div class="col-lg-2 col-md-4">
        <select class="form-select" name="category" asp-for="Category" onchange="this.form.submit()">
            <option value="">All Categories</option>
            <option value="Phones">Phones</option>
            <option value="Computers">Computers</option>
            <option value="Accessories">Accessories</option>
            <option value="Printers">Printers</option>
            <option value="Cameras">Cameras</option>
            <option value="Other">Other</option>
        </select>
    </div>
    <div class="col-lg-2 col-md-4">
        <select class="form-select" name="sort" asp-for="Sort" onchange="this.form.submit()">
            <option value="newest">Newest First</option>
            <option value="price_asc">Price: Low to High</option>
            <option value="price_desc">Price: High to Low</option>
        </select>
    </div>
    <div class="col-lg-4 col-md-8">
        <input class="form-control" name="search" placeholder="Search products..." value="@Model.Search">
    </div>
    <div class="col-lg-2 col-md-4">
        <button class="btn btn-primary w-100" type="submit">
            <i class="bi bi-search"></i> Search
        </button>
    </div>
</form>

<div class="row mb-5 g-3">
    @foreach (var product in ViewBag.Products)
    {
        <div class="col-lg-3 col-md-6">
            <div class="rounded border shadow p-3 text-center h-100">
                <img src="/products/@product.ImageFileName" class="img-fluid" alt="@product.Name"
                     style="height:180px; object-fit: contain" />
                <hr />
                <h5 class="py-2">@product.Name</h5>
                <p>
                    <span class="badge bg-light text-dark me-1">@product.Brand</span>
                    <span class="badge bg-light text-dark">@product.Category</span>
                </p>
                <h4 class="mb-3">@product.Price.ToString("C")</h4>
                <div class="d-flex justify-content-center gap-2">
                    <a class="btn btn-primary btn-sm mb-2" href="#" role="button">
                        <i class="bi bi-eye"></i> Details
                    </a>
                    <button type="button" class="btn btn-warning btn-sm mb-2">
                        <i class="bi bi-cart-plus"></i> Add to Cart
                    </button>
                </div>
            </div>
        </div>
    }
</div>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            string active = i == ViewBag.PageIndex ? "active" : "";
            <li class="page-item @active">
                <a class="page-link"
                   asp-route-pageIndex="@i"
                   asp-route-search="@Model.Search"
                   asp-route-brand="@Model.Brand"
                   asp-route-category="@Model.Category"
                   asp-route-sort="@Model.Sort">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Add to cart animation
    document.querySelectorAll('.btn-warning').forEach(button => {
        button.addEventListener('click', function() {
            const productCard = this.closest('.rounded.border.shadow');
            productCard.style.transform = 'translateY(-8px) scale(1.02)';

            setTimeout(() => {
                productCard.style.transform = 'translateY(-8px)';
            }, 300);
        });
    });
</script>