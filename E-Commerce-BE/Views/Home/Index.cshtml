@model List<Product>

@{
    ViewData["Title"] = "Home Page";
    ViewData["HomePage"] = true;
}

<style>
    :root {
        /* Premium Color Palette */
        --primary-color: #6c5ce7;
        --primary-dark: #5649c0;
        --accent-color: #00cec9;
        --light-bg: #f8f9ff;
        --card-bg: #ffffff;
        --text-dark: #2d3436;
        --text-light: #f5f6fa;
        --shadow-light: 0 4px 20px rgba(108, 92, 231, 0.1);
        --shadow-medium: 0 8px 30px rgba(108, 92, 231, 0.2);
        --shadow-heavy: 0 15px 40px rgba(0, 0, 0, 0.15);
        --border-radius: 16px;
        --border-radius-sm: 8px;
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        color: var(--text-light);
        position: relative;
        overflow: hidden;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none"><path fill="rgba(255,255,255,0.05)" d="M0,0 L100,0 L100,100 L0,100 Z" /></svg>');
            background-size: cover;
        }

    .hero-title {
        font-weight: 800;
        letter-spacing: -1px;
        text-shadow: 0 2px 10px rgba(0,0,0,0.2);
    }

    .hero-img {
        filter: drop-shadow(0 10px 20px rgba(0,0,0,0.3));
        animation: float 6s ease-in-out infinite;
    }

    /* Products Section */
    .products-section {
        background: var(--light-bg);
        position: relative;
    }

    .section-title {
        position: relative;
        display: inline-block;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -12px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: var(--primary-color);
            border-radius: 2px;
        }

    /* Product Cards */
    .product-card {
        border: none;
        border-radius: var(--border-radius);
        overflow: hidden;
        box-shadow: var(--shadow-light);
        background: var(--card-bg);
        transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        position: relative;
        z-index: 1;
    }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: var(--shadow-heavy);
        }

        .product-card::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 5%;
            width: 90%;
            height: 20px;
            background: var(--primary-color);
            filter: blur(12px);
            opacity: 0;
            transition: all 0.4s ease;
            z-index: -1;
        }

        .product-card:hover::after {
            opacity: 0.3;
        }

    .product-img {
        height: 200px;
        object-fit: contain;
        background: linear-gradient(to bottom, #f8f9fa, #e9ecef);
        padding: 1.5rem;
        transition: transform 0.5s ease;
    }

    .product-card:hover .product-img {
        transform: scale(1.05);
    }

    .product-meta {
        font-size: 0.85rem;
        color: #6c757d;
    }

    .price {
        font-weight: 700;
        color: var(--primary-color);
        font-size: 1.3rem;
    }

    /* Buttons */
    .btn-hero {
        border-radius: var(--border-radius);
        padding: 0.75rem 2rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
    }

    .btn-light {
        background: white;
        color: var(--primary-dark);
    }

    .btn-outline-light {
        border: 2px solid white;
    }

    .btn-details {
        background: var(--primary-color);
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-details:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
        }

    .btn-cart {
        background: var(--accent-color);
        color: var(--text-dark);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-cart:hover {
            background: #00b4b0;
            transform: translateY(-2px);
        }

    .btn-view-all {
        background: var(--primary-gradient);
        color: white;
        border-radius: var(--border-radius);
        padding: 0.75rem 2.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-view-all:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-medium);
        }

    /* Animations */
    @@keyframes float {
        0%, 100% {
            transform: translateY(0) rotate(0deg);
        }

        50% {
            transform: translateY(-20px) rotate(2deg);
        }
    }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }

        .hero-img {
            margin-top: 2rem;
            max-width: 80%;
        }
    }
</style>

<!-- Hero Section -->
<div class="hero-section">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-md-6 position-relative">
                <h1 class="hero-title mb-4 display-4 fw-bold">Discover Premium Electronics</h1>
                <p class="lead">
                    Explore our curated collection of cutting-edge devices from top brands at unbeatable prices.
                </p>
                <div class="d-flex gap-3 mt-4">
                    <a class="btn btn-light btn-hero fw-bold" href="#">
                        <i class="bi bi-lightning-charge-fill me-2"></i>Shop Now
                    </a>
                    <a class="btn btn-outline-light btn-hero" href="#">
                        <i class="bi bi-tag-fill me-2"></i>View Deals
                    </a>
                </div>
            </div>
            <div class="col-md-6 text-center position-relative">
                <img src="~/images/hero.png" class="hero-img img-fluid" alt="Premium Electronics" />
            </div>
        </div>
    </div>
</div>

<!-- Products Section -->
<div class="products-section">
    <div class="container py-5">
        <h2 class="section-title text-center mb-5 fw-bold">Newest Arrivals</h2>

        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="product-card h-100">
                        <img src="~/products/@product.ImageFileName" alt="@product.Name"
                             class="card-img-top product-img" />
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">@product.Name</h5>
                            <div class="product-meta mb-2">
                                <div><i class="bi bi-tag-fill me-1"></i> @product.Brand</div>
                                <div><i class="bi bi-grid-fill me-1"></i> @product.Category</div>
                            </div>
                            <h4 class="price mb-3">@product.Price.ToString("C")</h4>
                            <div class="d-grid gap-2 mt-3">
                                <a asp-controller="Store" asp-action="Details" asp-route-id="@product.Id"
                                   class="btn btn-details">
                                    <i class="bi bi-eye-fill me-2"></i>Details
                                </a>
                                <button type="button" class="btn btn-cart">
                                    <i class="bi bi-cart-plus-fill me-2"></i>Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-5">
            <a href="#" class="btn btn-view-all">
                Browse All Products <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</div>

<script>
    // Add to cart animation
    document.querySelectorAll('.btn-cart').forEach(button => {
        button.addEventListener('click', function() {
            const card = this.closest('.product-card');
            card.style.transform = 'translateY(-10px) scale(1.02)';

            // Create a temporary cart icon animation
            const cartIcon = document.createElement('div');
            cartIcon.innerHTML = '<i class="bi bi-cart-check-fill" style="font-size: 2rem; color: var(--accent-color);"></i>';
            cartIcon.style.position = 'fixed';
            cartIcon.style.top = '50%';
            cartIcon.style.left = '50%';
            cartIcon.style.transform = 'translate(-50%, -50%)';
            cartIcon.style.opacity = '0';
            cartIcon.style.transition = 'all 0.5s ease';
            cartIcon.style.zIndex = '1000';
            document.body.appendChild(cartIcon);

            // Animate the icon
            setTimeout(() => {
                cartIcon.style.opacity = '1';
                cartIcon.style.top = '20px';
                cartIcon.style.right = '20px';
                cartIcon.style.left = 'auto';
                cartIcon.style.transform = 'translateY(0)';
            }, 50);

            // Remove after animation
            setTimeout(() => {
                cartIcon.remove();
                card.style.transform = 'translateY(-10px)';
            }, 1000);
        });
    });
</script>