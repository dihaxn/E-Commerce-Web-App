        color: var(--text-dark);
        margin-bottom: 0.5rem;
    }

    .featured-desc {
        color: #6c757d;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    /* Testimonials Section */
    .testimonials-section {
        background: var(--light-bg);
        padding: 4rem 0;
    }

    .testimonial-card {
        background: var(--card-bg);
        border-radius: var(--border-radius);
        padding: 2rem;
        box-shadow: var(--shadow-light);
        height: 100%;
    }

    .testimonial-text {
        font-style: italic;
        color: var(--text-dark);
        line-height: 1.7;
        position: relative;
        padding: 1rem 0;
    }

        .testimonial-text::before,
        .testimonial-text::after {
            content: '"';
            font-size: 3rem;
            color: var(--accent-color);
            opacity: 0.3;
            position: absolute;
        }

        .testimonial-text::before {
            top: -10px;
            left: -10px;
