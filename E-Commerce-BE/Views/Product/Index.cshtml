@using Microsoft.AspNetCore.Html
@model List<Product>
@{
    int pageIndex = (int)ViewData["PageIndex"]!;
    int totalPages = (int)ViewData["TotalPages"]!;
    string search = (string)ViewData["Search"]!;
    string column = (string)ViewData["Column"]!;
    string orderBy = (string)ViewData["OrderBy"]!;
    HtmlString getArrow(string tableColumn)
    {
        if (tableColumn != column)
        {
            return new HtmlString("<i class='bi bi-arrow-down-up text-muted opacity-50'></i>");
        }
        if (orderBy == "desc")
        {
            return new HtmlString("<i class='bi bi-arrow-down text-primary'></i>");
        }
        return new HtmlString("<i class='bi bi-arrow-up text-primary'></i>");
    }
}

<style>
    :root {
        /* Premium Color Palette */
        --primary-color: #6c5ce7;
        --primary-dark: #5649c0;
        --accent-color: #00cec9;
        --light-bg: #f8f9ff;
        --card-bg: #ffffff;
        --text-dark: #2d3436;
        --text-light: #f5f6fa;
        --shadow-light: 0 4px 20px rgba(108, 92, 231, 0.1);
        --shadow-medium: 0 8px 30px rgba(108, 92, 231, 0.2);
        --shadow-heavy: 0 15px 40px rgba(0, 0, 0, 0.15);
        --border-radius: 16px;
        --border-radius-sm: 8px;
    }

    body {
        background-color: var(--light-bg);
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    }

    /* Page Header */
    .page-header {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        color: white;
        padding: 2rem 0;
        margin-bottom: 2rem;
        border-radius: 0 0 var(--border-radius) var(--border-radius);
        box-shadow: var(--shadow-heavy);
        position: relative;
        overflow: hidden;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23ffffff" fill-opacity="0.1"><circle cx="30" cy="30" r="2"/></g></svg>') repeat;
            animation: float 20s ease-in-out infinite;
        }

        .page-header h2 {
            font-weight: 800;
            letter-spacing: -0.5px;
            margin: 0;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            position: relative;
            z-index: 1;
        }

    /* Controls Section */
    .controls-section {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: var(--border-radius);
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-light);
        transition: all 0.3s ease;
        border: 1px solid rgba(108, 92, 231, 0.1);
    }

        .controls-section:hover {
            box-shadow: var(--shadow-medium);
            transform: translateY(-2px);
        }

    /* Enhanced Buttons */
    .btn-enhanced {
        border-radius: var(--border-radius);
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        border: none;
    }

    .btn-primary-enhanced {
        background: var(--primary-gradient);
        color: white;
        box-shadow: var(--shadow-light);
    }

        .btn-primary-enhanced:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-medium);
            color: white;
        }

    /* Search Form */
    .search-input {
        border: 2px solid rgba(108, 92, 231, 0.2);
        border-radius: var(--border-radius);
        padding: 0.75rem 1rem;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: rgba(248, 249, 252, 0.8);
    }

        .search-input:focus {
            border-color: var(--accent-color);
            box-shadow: 0 0 0 4px rgba(0, 206, 201, 0.2);
            background: white;
            outline: none;
        }

    /* Enhanced Table */
    .table-container {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: var(--border-radius);
        padding: 1.5rem;
        box-shadow: var(--shadow-light);
        transition: all 0.3s ease;
        overflow: hidden;
        border: 1px solid rgba(108, 92, 231, 0.1);
    }

        .table-container:hover {
            box-shadow: var(--shadow-medium);
        }

    .table-enhanced {
        margin: 0;
        border-collapse: separate;
        border-spacing: 0;
        width: 100%;
    }

        .table-enhanced thead th {
            background: var(--primary-gradient);
            color: white;
            font-weight: 600;
            padding: 1rem;
            border: none;
            position: relative;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .table-enhanced thead th:hover {
                background: var(--primary-dark);
            }

        .table-enhanced tbody tr {
            transition: all 0.3s ease;
        }

            .table-enhanced tbody tr:nth-child(even) {
                background: rgba(248, 249, 252, 0.5);
            }

            .table-enhanced tbody tr:hover {
                background: rgba(108, 92, 231, 0.1);
            }

        .table-enhanced tbody td {
            padding: 1rem;
            border: none;
            vertical-align: middle;
        }

    /* Product Image */
    .product-image {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: var(--border-radius-sm);
        box-shadow: var(--shadow-light);
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .product-image:hover {
            transform: scale(1.1);
            box-shadow: var(--shadow-medium);
        }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .btn-sm-enhanced {
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        border-radius: var(--border-radius-sm);
        font-weight: 600;
        transition: all 0.3s ease;
    }

    /* Enhanced Pagination */
    .pagination-container {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: var(--border-radius);
        padding: 1.5rem;
        margin-top: 2rem;
        box-shadow: var(--shadow-light);
        transition: all 0.3s ease;
        border: 1px solid rgba(108, 92, 231, 0.1);
    }

        .pagination-container:hover {
            box-shadow: var(--shadow-medium);
        }

    .pagination-enhanced {
        margin: 0;
        justify-content: center;
        gap: 0.5rem;
    }

    .page-item-enhanced .page-link-enhanced {
        border: 2px solid transparent;
        border-radius: var(--border-radius-sm);
        padding: 0.75rem 1rem;
        color: var(--primary-color);
        background: rgba(248, 249, 252, 0.8);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .page-item-enhanced .page-link-enhanced:hover {
            background: var(--primary-gradient);
            color: white;
        }

    .page-item-enhanced.active .page-link-enhanced {
        background: var(--primary-gradient);
        color: white;
    }

    /* Animations */
    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .page-header {
            padding: 1.5rem 1rem;
        }

        .controls-section {
            padding: 1rem;
        }

        .table-container {
            padding: 1rem;
            overflow-x: auto;
        }

        .action-buttons {
            flex-direction: column;
        }
    }
</style>

<div class="page-header">
    <div class="container">
        <h2 class="text-center">
            <i class="bi bi-box-seam me-2"></i>Product Management
        </h2>
    </div>
</div>

<div class="container">
    <div class="controls-section">
        <div class="row align-items-center">
            <div class="col-md-6 mb-3 mb-md-0">
                <a class="btn-enhanced btn-primary-enhanced" asp-controller="Product" asp-action="Create">
                    <i class="bi bi-plus-circle me-2"></i>Add New Product
                </a>
            </div>
            <div class="col-md-6">
                <form class="d-flex" role="search">
                    <input class="form-control search-input me-2" type="search" name="search"
                           value="@search" placeholder="Search products..." aria-label="Search">
                    <button class="btn-enhanced btn-primary-enhanced" type="submit">
                        <i class="bi bi-search me-2"></i>Search
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="table-container">
        <div class="table-responsive">
            <table class="table-enhanced">
                <thead>
                    <tr>
                        <th onclick="sortTable('Id')">ID @getArrow("Id")</th>
                        <th onclick="sortTable('Name')">Name @getArrow("Name")</th>
                        <th onclick="sortTable('Brand')">Brand @getArrow("Brand")</th>
                        <th onclick="sortTable('Category')">Category @getArrow("Category")</th>
                        <th onclick="sortTable('Price')">Price @getArrow("Price")</th>
                        <th>Image</th>
                        <th onclick="sortTable('CreatedAt')">Created At @getArrow("CreatedAt")</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td><strong>#@product.Id</strong></td>
                            <td>@product.Name</td>
                            <td>@product.Brand</td>
                            <td>
                                <span class="badge bg-primary rounded-pill">@product.Category</span>
                            </td>
                            <td>
                                <strong>$@product.Price.ToString("N2")</strong>
                            </td>
                            <td>
                                <img src="~/products/@product.ImageFileName"
                                     class="product-image"
                                     alt="@product.Name" />
                            </td>
                            <td>@product.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td>
                                <div class="action-buttons">
                                    <a class="btn-sm-enhanced btn-primary-enhanced"
                                       asp-controller="Product"
                                       asp-action="Edit"
                                       asp-route-id="@product.Id">
                                        <i class="bi bi-pencil me-1"></i>Edit
                                    </a>
                                    <a class="btn-sm-enhanced btn-danger-enhanced"
                                       asp-controller="Product"
                                       asp-action="Delete"
                                       asp-route-id="@product.Id"
                                       onclick="return confirm('Are you sure you want to delete this product?')">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (totalPages > 1)
    {
        <div class="pagination-container">
            <nav aria-label="Product pagination">
                <ul class="pagination pagination-enhanced">
                    @if (pageIndex > 1)
                    {
                        <li class="page-item-enhanced">
                            <a class="page-link-enhanced"
                               asp-route-pageIndex="@(pageIndex - 1)"
                               asp-route-search="@search"
                               asp-route-column="@column"
                               asp-route-orderBy="@orderBy">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                    }

                    @for (int i = Math.Max(1, pageIndex - 2); i <= Math.Min(totalPages, pageIndex + 2); i++)
                    {
                        string active = i == pageIndex ? "active" : "";
                        <li class="page-item-enhanced @active">
                            <a class="page-link-enhanced"
                               asp-route-pageIndex="@i"
                               asp-route-search="@search"
                               asp-route-column="@column"
                               asp-route-orderBy="@orderBy">
                                @i
                            </a>
                        </li>
                    }

                    @if (pageIndex < totalPages)
                    {
                        <li class="page-item-enhanced">
                            <a class="page-link-enhanced"
                               asp-route-pageIndex="@(pageIndex + 1)"
                               asp-route-search="@search"
                               asp-route-column="@column"
                               asp-route-orderBy="@orderBy">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>

<script>
    function sortTable(column) {
        let orderBy = "asc";
        let currentColumn = "@column";
        let currentOrder = "@orderBy";

        if (column == currentColumn) {
            orderBy = currentOrder == "asc" ? "desc" : "asc";
        }

        window.location.href = `?search=@(search)&column=${column}&orderBy=${orderBy}`;
    }

    // Image modal functionality
    document.querySelectorAll('.product-image').forEach(img => {
        img.addEventListener('click', function() {
            const modal = document.createElement('div');
            modal.innerHTML = `
                <div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%;
                     background: rgba(0,0,0,0.8); display: flex; align-items: center;
                     justify-content: center; z-index: 9999; cursor: pointer;"
                     onclick="this.remove()">
                    <img src="${this.src}" style="max-width: 90%; max-height: 90%;
                         border-radius: 12px; box-shadow: 0 8px 35px rgba(0,0,0,0.3);"
                         alt="${this.alt}">
                </div>
            `;
            document.body.appendChild(modal);
        });
    });
</script>